<?xml version="1.0" encoding="UTF-8"?>

<menubar>

	<menu mnemonic="VK_F" text="File">
        <menuitem text="Open Event File..." mnemonic="VK_O" accelerator="control O" action="openFileAction"/>
        <menuitem text="Open ProtXML File..." mnemonic="VK_P" accelerator="control P" action="proteinSummaryAction"/>
        <menuitem text="Save..." mnemonic="VK_S" accelerator="control S"  action="saveAction"/>
        <menuitem text="Exit" mnemonic="VK_X" action="exitAction"/>
    </menu>

    <menu mnemonic="VK_T" text="Tools">
        <menuitem text="Create Charts..." mnemonic="VK_C" action="createChartsAction"/>                
        <menuitem text="Filter PepXML..." mnemonic="VK_F" action="filterPepXMLAction"/>
        <menuitem text="Summary Charts" action="summaryChartsAction"/>

    </menu>

    <menu mnemonic="VK_H" text="Help">
		<menuitem text="Help" enabled="true" mnemonic="VK_H" accelerator="F1" action="helpAction"/>
		<menuitem text="About" enabled="true" mnemonic="VK_A" action="aboutAction"/>        
    </menu>

</menubar>
